
<robot xmlns="http://drake.mit.edu"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://drake.mit.edu ../../doc/drakeURDF.xsd" name="SimplePulley">

<!-- Parameters for Tensioner - to be estimated-->
  <parameter name="m1" value="0.1" lb="0" /> <!-- just a guess on m1 -->
  <!-- m1 = 0.1; r1 = 0.03793/2; I1xx = 1/4*m1*r1^2;  I1yy = 1/2*m1*r1^2;  I1zz = I1xx;-->
  <parameter name="ixx1" value="0.00000899" lb="0" />
  <parameter name="iyy1" value="0.000107687954594736" lb="0" />
  <parameter name="izz1" value="0.00000899" lb="0" />
<!--  <parameter name="ixx1" value="0.00005" lb="0" />
  <parameter name="iyy1" value="0.0001" lb="0" />
  <parameter name="izz1" value="0.00005" lb="0" /> -->
<!--  <parameter name="b1" value="0.0003" lb="0" />
  <parameter name="k1" value="2" lb="0" /> -->
  <parameter name="b1" value="0.000550304675835062" lb="0" />
  <parameter name="k1" value="0.797496299490406" lb="0" />

<!-- Parameters for Load - measured-->
  <parameter name="m2" value="0.131" lb="0" /> <!-- 0.06947 -->
  <!-- m2 = 0.131; r2 = 0.08846/2; h2 = 0.0088; I2xx = 1/12*m2*(3*r2^2+h2^2);  I2yy = 1/2*m2*r2^2;  I2zz = I2xx; -->
  <parameter name="ixx2" value="0.00006491" lb="0" />
  <parameter name="iyy2" value="0.00012813" lb="0" />
  <parameter name="izz2" value="0.00006491" lb="0" />
  <parameter name="bsurface" value="0.213679574645237" lb="0" />

  <link name="base">
    <!--visual>
      <material>
        <color rgba="1 .5 0 0"/>
      </material>
      <origin xyz="-0.2 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius=".005" length=".2"/>
      </geometry>
    </visual-->
    <!--visual>
      <origin xyz="0 0 0.075"/>
      <geometry>
        <box size="0.5 0.3 0.35"/>
      </geometry>
    </visual-->
  </link>
  
  <link name="tensioner">
    <inertial>
      <mass value="$m1"/>
      <inertia ixx="$ixx1" ixy="0.000000" ixz="0.000000" iyy="$iyy1" iyz="0.000000" izz="$izz1" />
    </inertial>
    <visual>
      <material>
        <color rgba="1 .5 0 0"/>
      </material>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius=".019" length="0.0088"/>
      </geometry>
    </visual>
    <visual> <!-- add a "line" for a visual reference -->
      <material>
        <color rgba="0 0 0 0"/>
      </material>
      <origin xyz=".01 0 0" rpy="0 0 0"/>
      <geometry>
        <box size=".019 .01 .002"/>
      </geometry>
    </visual>
  </link>

  <link name="load">
    <inertial>
      <mass value="$m2"/>
      <inertia ixx="$ixx2" ixy="0.000000" ixz="0.000000" iyy="$iyy2" iyz="0.000000" izz="$izz2" />
    </inertial>
    <visual>
      <material>
        <color rgba=".8 0 0 0"/>
      </material>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius="0.04423" length="0.0088"/> <!-- radius="0.08855" m --><!-- length="0.00883" m -->
      </geometry>
    </visual>

    <!-- add a "line" for a visual reference -->
<!--    <visual>
      <material>
        <color rgba="0 0 0 0"/>
      </material>
      <origin xyz="0 .2 0.45" rpy="0 0 0"/>
      <geometry>
        <box size=".01 .2 .9"/>
      </geometry>
    </visual> -->
  </link>
  
  <joint name="tensioner_angle" type="revolute">
    <origin xyz="0.145 1 -0.019"/>
    <axis xyz="0 1 0"/>
    <parent link="base"/>
    <child link="tensioner"/>
    <dynamics damping="$b1"/>
  </joint>
  
  <link name="load_x" />
  <joint name="load_x" type="prismatic">
    <origin xyz="0 1 0"/>
    <axis xyz="1 0 0"/>
    <parent link="base"/>
    <child link="load_x"/>
    <dynamics damping="$bsurface"/>
  </joint>
  <joint name="load_z" type="prismatic">
    <origin xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
    <parent link="load_x"/>
    <child link="load"/>
    <dynamics damping="0.3"/>
  </joint>

  <force_element name="tensioner_spring">
    <torsional_spring rest_angle="0" stiffness="$k1">
      <joint name="tensioner_angle"/>
    </torsional_spring>
  </force_element>


 <transmission type="SimpleTransmission" name="tensioner_trans">
    <actuator name="tensioner_angle" />
    <joint name="tensioner_angle" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>


<!--  <cable min_length="8" max_length="8"> --> <!-- good for if I take out the final pulley -->
  <cable min_length="0.43922" max_length="0.43922"> <!-- cable length = 0.145 * 2 + 2*  pi*radius_pulley + radius_pulley * pi/2-->
    <terminator link="base" xyz="-0.145 1 0" />
    <pulley link="load" xyz="0 0 0" axis="0 -1 0" radius="0.04423"/>
    <pulley link="base" xyz="0.145 1 -0.019" axis="0 1 0" radius=".019" number_of_wraps="1" />
    <terminator link="tensioner" xyz="0.0192 0 0"/>
  </cable>

</robot>
