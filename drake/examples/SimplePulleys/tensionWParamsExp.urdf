
<robot xmlns="http://drake.mit.edu"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://drake.mit.edu ../../doc/drakeURDF.xsd" name="SimplePulley">

<!-- Parameters for Tensioner-->
  <parameter name="m1" value="0.1" lb="0" />
  <parameter name="ixx1" value="0.00017368" lb="0" />
  <parameter name="iyy1" value="0.00034735" lb="0" />
  <parameter name="izz1" value="0.00017368" lb="0" />
  <parameter name="d1" value="0.005" lb="0" />
  <parameter name="k1" value="0.2" lb="0" />

<!-- Parameters for Load-->
  <parameter name="m2" value="0.131" lb="0" /> <!-- 0.06947 -->
  <parameter name="ixx2" value="0.00013603" lb="0" />
  <parameter name="iyy2" value="0.00027205" lb="0" />
  <parameter name="izz2" value="0.00013603" lb="0" />

 

  <link name="base">
    <!--visual>
      <material>
        <color rgba="1 .5 0 0"/>
      </material>
      <origin xyz="-0.2 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius=".005" length=".2"/>
      </geometry>
    </visual-->
    <!--visual>
      <origin xyz="0 0 0.075"/>
      <geometry>
        <box size="0.5 0.3 0.35"/>
      </geometry>
    </visual-->
  </link>
  
  <link name="tensioner">
    <inertial>
      <mass value="$m1"/>
      <inertia ixx="$ixx1" ixy="0.000000" ixz="0.000000" iyy="$iyy1" iyz="0.000000" izz="$izz1" />
    </inertial>
    <visual>
      <material>
        <color rgba="1 .5 0 0"/>
      </material>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius=".019" length="0.0088"/>
      </geometry>
    </visual>
    <visual> <!-- add a "line" for a visual reference -->
      <material>
        <color rgba="0 0 0 0"/>
      </material>
      <origin xyz=".01 .01 0" rpy="0 0 0"/>
      <geometry>
        <box size=".019 .01 .002"/>
      </geometry>
    </visual>
  </link>

  <link name="load">
    <inertial>
      <mass value="$m2"/>
      <inertia ixx="$ixx2" ixy="0.000000" ixz="0.000000" iyy="$iyy2" iyz="0.000000" izz="$izz2" />
    </inertial>
    <visual>
      <material>
        <color rgba=".8 0 0 0"/>
      </material>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius="0.04423" length="0.0088"/> <!-- radius="0.08855" m --><!-- length="0.00883" m -->
      </geometry>
    </visual>

    <!-- add a "line" for a visual reference -->
<!--    <visual>
      <material>
        <color rgba="0 0 0 0"/>
      </material>
      <origin xyz="0 .2 0.45" rpy="0 0 0"/>
      <geometry>
        <box size=".01 .2 .9"/>
      </geometry>
    </visual> -->
  </link>
  
  <joint name="tensioner_angle" type="revolute">
    <origin xyz="0.19 1 -0.019"/>
    <axis xyz="0 1 0"/>
    <parent link="base"/>
    <child link="tensioner"/>
    <dynamics damping="$d1"/>
  </joint>
  
  <link name="load_x" />
  <joint name="load_x" type="prismatic">
    <origin xyz="0 1 0"/>
    <axis xyz="1 0 0"/>
    <parent link="base"/>
    <child link="load_x"/>
    <dynamics damping="0"/>
  </joint>
  <joint name="load_z" type="prismatic">
    <origin xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
    <parent link="load_x"/>
    <child link="load"/>
    <dynamics damping="0"/>
  </joint>

  <force_element name="tensioner_spring">
    <torsional_spring rest_angle="0" stiffness="$k1">
      <joint name="tensioner_angle"/>
    </torsional_spring>
  </force_element>

<!--  <cable min_length="8" max_length="8"> --> <!-- good for if I take out the final pulley -->
  <cable min_length="0.531988" max_length="0.531988"> <!-- cable length: 0.38+ 0.149 m + pulley length-->
    <terminator link="base" xyz="-0.19 1 0" />
    <pulley link="load" xyz="0 0 0" axis="0 -1 0" radius="0.04423"/>
    <pulley link="base" xyz="0.19 1 -0.019" axis="0 1 0" radius=".019" number_of_wraps="1" />
    <terminator link="tensioner" xyz="0.0194 0 0"/>
  </cable>

</robot>
